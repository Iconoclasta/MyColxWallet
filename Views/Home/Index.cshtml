								<a class="dropdown-item" onclick="setSendCurrency('EUR')">EUR</a>
							</div>
						</div>
					</div>
					<div id="amount-info-box">1 PIVX = @ViewData["PIVXPrices"] (1 PIVX = @ViewData["BtcRate"] BTC)</div>
				</div>
			</section>
			<!-- To Address -->
			<div class="row form-group">
				<div class="col-xs-11" style="width: 95%">
